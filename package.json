{
  "name": "todo-app",
  "version": "1.3.0",
  "author": "Anouar Mahmoud Bellakha",
  "description": "A simple Todo Web application built with React, Next.js, and Styled Components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevAnouar-Ecommaroc/todo-app.git"
  },
  "bugs": {
    "url": "https://github.com/DevAnouar-Ecommaroc/todo-app/issues"
  },
  "homepage": "https://github.com/DevAnouar-Ecommaroc/todo-app#readme",
  "license": "UNLICENSED",
  "scripts": {
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook",
    "dev": "next",
    "build": "next build",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "yarn eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      ".next/**/*.js"
    ]
  },
  "dependencies": {
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@storybook/addons": "^5.1.1",
    "@storybook/react": "^5.1.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "^0.100.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "1.17.1"
  }
}
